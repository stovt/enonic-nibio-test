<content-type>
  <display-name>News Article</display-name>
  <super-type>base:structured</super-type>
  <form>
    <input type="TextArea" name="intro">
      <label>Intro</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input type="ImageSelector" name="photo">
      <label>Photo</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input type="ContentSelector" name="author">
      <label>Author</label>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <allowContentType>person</allowContentType>
      </config>
    </input>
  </form>
</content-type>